    <section class="ftco-section testimony-section" style="background-image: url({{{cdn}}}/images/bg_5.jpg);" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
          	<span class="subheading">{{page.team.subheader}}</span>
            <h2 class="mb-4">{{page.team.header}}</h2>
          </div>
        </div>
